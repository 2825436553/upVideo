<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp"
    app:cardMaxElevation="2dp"
    app:cardElevation="2dp">


    <LinearLayout
        android:id="@+id/ui_p_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        style="@style/text1"
                        android:id="@+id/ui_p_text4"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/app_todo"
                        android:id="@+id/ui_p_text10"
                        android:textColor="@color/black_2"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_son_add"/>


            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/app_todo"
                android:id="@+id/ui_p_text5"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/permission_dp_10"
                android:layout_marginStart="14dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/app_todo"
                android:id="@+id/ui_p_text9"
                android:textColor="@color/black_2"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="14dp"/>
            <!--android:gravity="end"
            @dimen/permission_dp_20-->
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="14dp"/>

    </LinearLayout>

    <!--<View
        android:background="@color/black_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>-->
</androidx.cardview.widget.CardView>

